apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: minikube-tls-ingress
  annotations:
    kubernetes.io/ingress.class: "nginx"
    nginx.ingress.kubernetes.io/rewrite-target: /$1
    cert-manager.io/cluster-issuer: letsencrypt-production
spec:
  tls:
  - hosts:
    - tamdevops.tk
    secretName: minikube-tls-secret
  rules:
  - host: tamdevops.tk
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: web
            port:
              number: 8080
  - host: gocd.tamdevops.tk
    http:
      paths: 
      - path: /
        pathType: Prefix
        backend:
          service:
            name: tamnpham-gocd-server
            port:
              number: 8153
